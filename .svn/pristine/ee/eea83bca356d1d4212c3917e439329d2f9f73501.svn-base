    methods: {
        confirm() {},
        getFile(event, type) {
            let _this = this;
            let files = event.target.files[0];
            var formData = new FormData(); // 创建form对象  s
            formData.append("imgStr", files);
            console.log(formData);
            let config = {
                headers: { "Content-Type": "multipart/form-data" }
            }; //添加请求头

            _this.$http
                .form(
                    "/Product/UploadNew/upLoadUserImgAndShowNew",
                    formData,
                    function(progressEvent) {
                        let complete =
                            ((progressEvent.loaded /
                                progressEvent.total *
                                100) |
                                0) +
                            "%";
                        _this.data.splice(type, 1, {
                            bg: "",
                            text: "",
                            showProgress: true,
                            progress: complete
                        });
                    }
                )
                .then(res => {
                    if (res.data.end == "ok") {
                        console.log(res.data);
                        _this.data.splice(type, 1, {
                            bg: res.data.data.userImgUrl,
                            text: "",
                            showProgress: false,
                            progress: "0%"
                        });

                        if (type == 0) {
                            imgData.imgUrlOne = res.data.data.userImgUrl;
                        } else if (type == 1) {
                            imgData.imgUrlTwo = res.data.data.userImgUrl;
                        } else {
                            imgData.imgUrlThree = res.data.data.userImgUrl;
                        }
                    } else {
                        this.$Toast(res.data.message);
                    }
                });
            // }
        },
        Submission() {
            var arr = this.data.filter(item => item.bg);
            if (arr.length == 3) {
                this.showPopup = true;
            } else {
                this.$Toast("请上传对应图片");
            }

