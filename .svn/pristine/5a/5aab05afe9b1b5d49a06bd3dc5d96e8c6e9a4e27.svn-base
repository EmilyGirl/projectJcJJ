.ml_block{
	padding: 0 2.6rem 1rem 2.6rem;
	/*margin-top: 1.1rem;*/
	margin-bottom: 1rem;
	background: #FFFFFF;
}
.ml_block_header,.ml_block_body,.ml_block_all{
	width: 100%;
}
.ml_block_body,.ml_block_all{
	display: flex;
	justify-content: flex-start;
	flex-wrap: wrap;
}
.ml_block_half{
	width: 50%;
}
.ml_block_list{
	display: flex;
	justify-content: space-between;
	border-bottom: 1px solid #E2DEDE;
	padding: 1.35rem 0;
}
.ml_block_list:last-of-type{
	border: none;
}
