.xp{
    width: 100%;
//  overflow: hidden;
    .nav{
        width: 100%;
        overflow-x: scroll;
    }
    .slide-pages {
        position: relative;
        box-sizing: border-box;
        margin: 0 auto;
        height: 3.8rem;
        padding: 0rem 0.2rem;
        width: 66rem;
        background-color: #FFF;
        font-size: 1.5rem;
        transition: all .6s ease-in-out;
        margin-bottom: 1rem;
        li{
            display: inline-block;
            padding: 1.2rem 1.1rem;
        }
        .router-link-active{
            color: #2772FF;
            left:-10rem;
        }
    }
}
