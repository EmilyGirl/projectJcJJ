.homeTabs .homeTabs{
	width: 100%;
    height: 100vh;
    background: #eaeaea;
    position: relative;
    overflow-x: hidden;
    overflow-y: scroll;
}

.homeTabs .tab {
    display: flex;
    justify-content: space-between;
	width: 100%;
    padding: 1.03rem 0 0.78rem 0;
    background: #fff;
    position: fixed;
    font-size: 1.2rem;
    z-index: 1000;
    bottom: 0;
    border-top: .1rem solid #E1E1E1;
}

.homeTabs .tab li {
    width: 50%;
    float: left;
    font-size: .9em;
    text-align: center;
    height: 100%;
}

.homeTabs .tab li a {
    color: #999;
}

.homeTabs .tab li.cur a {
    color: #333;
}

.homeTabs .tab .router-link-active.nav-item.router-link-exact-active {
     color: #2772FF;
}

.homeTabs .tab .router-link-active.nav-item:nth-child(1) span,.homeTabs .tab .router-link-active.nav-item:nth-child(2) span,.homeTabs .tab .router-link-active.nav-item:nth-child(3) span{
    width: 1.845rem;
    height: 1.74rem;
    display: block;
    margin: 0 auto .375rem auto;
}

.homeTabs .tab .nav-item:nth-child(1) span ,.homeTabs .tab .nav-item:nth-child(2) span ,.homeTabs .tab .nav-item:nth-child(3) span {
     width: 1.845rem;
    height: 1.74rem;
    display: block;
    margin: 0 auto .375rem auto;
}


.homeTabs .tab .home .router-link-active.router-link-exact-active span {
    background: url(../../img/wechat/shouye/chome.png) no-repeat;
    background-size: 100% 100%;
}

.homeTabs .tab .purchase .router-link-active.router-link-exact-active span {
    background: url(../../img/wechat/shouye/cmoney.png) no-repeat;
    background-size: 100% 100%;
}


.homeTabs .tab .mine .router-link-active.router-link-exact-active span {
    background: url(../../img/wechat/shouye/cmine.png) no-repeat;
    background-size: 100% 100%;
}






.homeTabs .tab .home span {
    background: url(../../img/wechat/shouye/khome.png) no-repeat;
    background-size: 100% 100%;
}

.homeTabs .tab .purchase span  {
    background: url(../../img/wechat/shouye/kmoney.png) no-repeat;
    background-size: 100% 100%;
}

.homeTabs .tab .mine span{
    background: url(../../img/wechat/shouye/mine.png) no-repeat;
    background-size: 100% 100%;
}








