.bind-bank .fu-mask { position: absolute;width: 100%;height: 100%;background: rgba(0,0,0,0.5);z-index: 10000000; }
.bind-bank .fu-content { background: #F5F5F5;width: 100%;height: 100%;position: absolute;bottom: 0;left: 0; }
.bind-bank .fu-content { background: #fff; }
.bind-bank .alert-title,.fu-title { background: #fff;height: 5.1rem;font-size: 1.5rem;line-height: 5.1rem;padding-left: 1rem;border-bottom: 1px solid #979797;position: relative; }
.bind-bank .fu-title { text-align: center; }
.bind-bank .fu-title img { width: 1.5rem;height: 1.5rem;position: absolute;top: 1.8rem;right: 1.5rem; }
.bind-bank .mode { background: #fff;height: auto; }
.bind-bank .mode li { height: 9rem;border-bottom: 1px solid #999;margin-left: 1.5rem; }
.bind-bank .mode li:last-child { border-bottom: 0; }
.bind-bank .balance { width: 5.5rem;height: 5.5rem;margin-top: 1.75rem; }
.bind-bank .fu-middle { margin-left: 1.5rem; }
.bind-bank .yu-common { font-size: 1.6rem;color: #333;line-height: 2.3rem;margin-top: 2.1rem; }
.bind-bank .money-common { font-size: 1.3rem;color: #999;line-height: 1.9rem;margin-top: 0.6rem; }
