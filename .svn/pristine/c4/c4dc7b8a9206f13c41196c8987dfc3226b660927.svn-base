.bind-bank .bind-common { margin: 0 1.8rem; }
.bind-bank .bind-top div,.bind-title { font-size: 1.5rem;line-height: 4.1rem;color: #333; }
.bind-bank .bind-middle,.bind-bottom { background: #fff; }
.bind-bank .bind-middle ul,.bind-bottom ul { padding-left: 1.8rem; }
.bind-bank .bind-middle ul li,.bind-bottom ul li { border-bottom: 1px solid #e5e5e5;height: 4.5rem;line-height: 4.5rem;font-size: 1.5rem; }
.bind-bank .left-common { width: 7.5rem; }
.bind-bank .right-common { width: 28.2rem; }
.bind-bank .right-common input { width: 100%;height: 2.1rem;margin-bottom: 0.5rem; }
.bind-bank .right-common input::-webkit-input-placeholder { color: #ccc; }
.bind-bank .right-icon { width: 0.9rem;height: 1.3rem;margin: 1.6rem 1.4rem 0 0; }
.bind-bank .choice { color: #ccc; }
.bind-bank .bind-front { font-size: 1.2rem;color: #999;padding: 1rem 1.8rem; line-height: 1.8rem;}
.bind-bank .bind-front img { width: 1.2rem;height: 1.2rem; }
.bind-bank .bind-title { margin-left: 1.8rem; }
.bind-bank .bottom-right { width: 19.3rem; }
.bind-bank .inputma { color: #2772FF;background: none;margin-top: 1.1rem; }
.bind-bank .ment1 { text-align: center;font-size: 1.2rem;color: #9A9A9A;line-height: 1.7rem;margin-top: 1rem; }
.bind-bank .ment1 img { width: 1.6rem;height: 1.6rem;margin-right: 1.3rem; }
.bind-bank .ment1 a { color: #5E9CFF; }
